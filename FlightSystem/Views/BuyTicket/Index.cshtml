@model FlightSystem.Models.ClientInfo
@{
}

<br />
<h1>Оформление билета</h1>
<br />


<h2>Данные рейса</h2>
<div>
</div>
<div>
    <h6>Дата прилета и вылета</h6>
    <label>@ViewBag.SelectedFlight.ArrivalData - @ViewBag.SelectedFlight.DepartureData</label>
</div>
<div>
    <h6>Маршрут</h6>
    <label>@ViewBag.SelectedFlight.ArrivalPlace - @ViewBag.SelectedFlight.DeparturePlace</label>
</div>
<div>
    <h6>Стоимость</h6>
    <label>от 6500 руб.</label>
</div>

<br />


    @foreach (string error in ViewBag.Errors)
    {
        <div class="thing">
            <h6>Ошибка!</h6>
            <p> @error</p>
        </div>
    }





@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Контактные данные</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FlightId)

        <div class="form-group">
            <h6>Фамилия</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SecondName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SecondName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Имя</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Отчество</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FatherName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FatherName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <h6>Паспортные данные (серия и номер)</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Passport, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Passport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Дата рождения</h6>
                <div>
                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "date", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                </div>
        </div>

        <div class="form-group">
            <h6>Почта</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div> </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit"> Перейти к выбору места </button>
            </div>
        </div>
    </div>
}

